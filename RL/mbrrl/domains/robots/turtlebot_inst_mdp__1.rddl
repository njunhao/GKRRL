non-fluents nf_turtlebot_inst_mdp__1 {
	domain = turtlebot_mdp;
	objects {
		waypoint: {wp0, wp1, wp2, wp3, wp4, wp5, wp6};
		robot: {r1};
	};
	
	non-fluents {
		dock_at(wp0);
	};
}

instance turtlebot_inst_mdp__1 {
	domain = turtlebot_mdp;
	non-fluents = nf_turtlebot_inst_mdp__1;
	init-state {
		robot_at(r1, wp0);
		docked(r1);
	};

	max-nondef-actions = 1;
	horizon  = 12;
	discount = 1.0;
}